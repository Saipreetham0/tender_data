# Environment Variables Configuration
# Copy this file to .env.local and fill in your actual values

# Supabase Configuration (Get from Supabase Dashboard)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# JWT Secret - Generate a secure random string (64+ characters)
JWT_SECRET=your_jwt_secret_here_generate_secure_64_char_string

# Razorpay Configuration (Get from Razorpay Dashboard)
RAZORPAY_KEY_ID=rzp_test_or_live_key_id_here
RAZORPAY_KEY_SECRET=your_razorpay_secret_here
RAZORPAY_WEBHOOK_SECRET=your_webhook_secret_here
NEXT_PUBLIC_RAZORPAY_KEY_ID=rzp_test_or_live_key_id_here

# API Security
CRON_API_SECRET_KEY=generate_32_char_random_string_here

# Resend Email Configuration (Get from Resend Dashboard)
RESEND_API_KEY=re_your_resend_api_key_here
RESEND_FROM_EMAIL=your-verified-email@yourdomain.com

# Notification Recipients
NOTIFICATION_EMAILS=admin@yourdomain.com,notifications@yourdomain.com

# Google OAuth Configuration (Get from Google Cloud Console)
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# Application URLs
NEXT_PUBLIC_API_BASE_URL=https://your-app-domain.com
VERCEL_URL=https://your-app-domain.com

# Environment
NODE_ENV=production